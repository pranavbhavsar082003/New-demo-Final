<div class="container">
  <div class="form-wrapper">
    <h1 class="text-center">Edit NFT</h1>
    <form action="/cart/edit/{{nft._id}}" method="POST">
      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" rows="4" required>{{nft.description}}</textarea>
      </div>
      <div class="form-group">
        <label for="imageUrl">Image URL</label>
        <input type="text" id="imageUrl" name="imageUrl" class="form-control" value="{{nft.imageUrl}}" required>
      </div>
      <button type="submit" class="btn btn-primary">Update NFT</button>
      <a href="/cart" class="btn btn-secondary">Back to Cart</a>
    </form>
  </div>
</div>
