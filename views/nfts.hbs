<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NFTs</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center">NFT Collection</h1>
    <form action="/nfts/search" method="GET" class="form-inline justify-content-center mb-4">
      <input type="text" name="q" class="form-control mr-2" placeholder="Search NFTs..." value="{{query}}">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
    {{#if message}}
    <div class="alert alert-warning text-center">
      {{message}} <a href="/nfts/add" class="btn btn-primary">Create NFT</a>
    </div>
    {{/if}}
    <div class="row">
      {{#each nfts}}
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.title}}">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Price: ${{this.price}}</p>
            <form action="/cart/add/{{this._id}}" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-success">Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</body>
</html>
